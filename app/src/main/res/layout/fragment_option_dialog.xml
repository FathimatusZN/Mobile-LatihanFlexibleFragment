<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android = "http://schemas.android.com/apk/res/android"
             xmlns:tools = "http://schemas.android.com/tools"
             android:id="@+id/dialog_container"
             android:layout_width = "match_parent"
             android:layout_height = "match_parent"
             tools:context = ".OptionDialogFragment">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_marginTop = "20dp"
        android:text = "@string/question_club" />

    <RadioGroup
        android:id = "@+id/rg_options"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical">

        <RadioButton
            android:id = "@+id/rb_1"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_marginTop = "60dp"
            android:layout_marginBottom = "16dp"
            android:text = "@string/barcelona" />

        <RadioButton
            android:id = "@+id/rb_2"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_marginBottom = "16dp"
            android:text = "@string/realmadrid" />

        <RadioButton
            android:id = "@+id/rb_3"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_marginBottom = "16dp"
            android:text = "@string/bayernmunchen" />

        <RadioButton
            android:id = "@+id/rb_4"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_marginBottom = "16dp"
            android:text = "@string/liverpool" />
    </RadioGroup>

    <Button
        android:id = "@+id/btn_close"
        android:layout_width = "150dp"
        android:layout_height = "50dp"
        android:layout_marginLeft = "30dp"
        android:layout_marginTop = "320dp"
        android:background = "#6A1B9A"
        android:onClick = "closeButtonClick"
        android:stateListAnimator = "@null"
        android:text = "@string/close"
        android:textColor = "#FFFFFF" />

    <Button
        android:id = "@+id/btn_choose"
        android:layout_width = "150dp"
        android:layout_height = "50dp"
        android:layout_marginLeft = "230dp"
        android:layout_marginTop = "320dp"
        android:background = "#6A1B9A"
        android:onClick = "chooseButtonClick"
        android:stateListAnimator = "@null"
        android:text = "@string/choose"
        android:textColor = "#FFFFFF" />

</FrameLayout>
